{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://tmi-platform.org/collective/collective.schema.json",

  "definitions": {
    "uei": {"$ref": "http://tmi-platform.org/root.schema.json#/definitions/uei"},
    "name": {"$ref": "http://tmi-platform.org/root.schema.json#/definitions/name"},
    "description": {"$ref": "http://tmi-platform.org/root.schema.json#/definitions/description"},
    "exposure": {"$ref": "http://tmi-platform.org/root.schema.json#/definitions/exposure"},
    "status": {"$ref": "http://tmi-platform.org/root.schema.json#/definitions/status"},
    "participantRef": {"$ref": "http://tmi-platform.org/root.schema.json#/definitions/participantRef"},
    "collectiveRef": {"$ref": "http://tmi-platform.org/root.schema.json#/definitions/collectiveRef"}
  },

  "type": "object",
  "title": "Collective",
  "properties": {

    "id":  {
      "allOf": [
        {"$ref": "#/definitions/uei"},
        {
          "title": "Collective ID",
          "description": "Unique collective identifier."
        }
      ],
      "isUniqueKey": true
    },

    "name":  {
      "allOf": [
        {"$ref": "#/definitions/name"},
        {
          "title": "Collective name",
          "Description": "Name of the collective."
        }
      ],
      "isUniqueKey": true
    },

    "description":  {
      "allOf": [
        {"$ref": "#/definitions/description"},
        {
          "title": "Description",
          "Description": "A short description of the collective."
        }
      ]
    },

    "profiles": {
      "title": "Collective profiles",
      "type": "array",
      "description": "Profiles this collective collects.",
      "properties": {
        "profileId": {
          "type": "number"
        },
        "required": {
          "type": "boolean"
        },
        "cardinality": {
          "type": "number"
        },
        "exposure": {"$ref": "#/definitions/exposure"}
      }
    },

    "agreements": {
      "title": "Agreements",
      "type": "array",
      "description": "Agreements between members of this collective.",
      "items": {
        "type": "object",
        "properties": {
          "agreementId": {
            "type": "number"
          },
          "required": {
            "type": "boolean"
          },
          "cardinality": {
            "type": "number"
          },
          "exposure": {"$ref": "#/definitions/exposure"}
        }
      }
    },

    "owner": {"$ref": "#/definitions/participantRef"},
    "status": {"$ref": "#/definitions/status"},
    "exposure": {"$ref": "#/definitions/exposure"},
    "membership": {"$ref": "#/definitions/exposure"},
    "delegate": {
      "administration": {"$ref": "#/definitions/collectiveRef"},
      "moderation": {"$ref": "#/definitions/collectiveRef"}
    }
  },

  "required": ["name", "description", "status"]
}