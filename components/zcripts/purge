echo "DANGER DANGER DANGER"

echo "ARE YOU FUCKING SURE? THIS WILL DELETE EVERYTHING INCLUDING DATA! (Y/n)"
read $sure

if [$sure == 'Y']

    echo "Are you absolutely sure you want to fucking purge (Y/n)"
    read $sure

    if [$sure == 'Y']
        docker stop $(docker ps -a -q)
        docker rm $(docker ps -a -q)
        docker rmi $(docker images -a -q)
        docker volume rm $(docker volume ls -q)
        docker system prune -a
    fi
fi