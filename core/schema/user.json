{
  "type": "object",
  "title": "User",
  "properties": {
    "userId":  {
      "title": "User ID",
      "type": "number",
      "description": "Unique index of this user.",
      "isUniqueKey": true,
      "widget": {
        "type": "output",
        "hidden": true
      }
    },
    "username":  {
      "title": "Username",
      "type": "string",
      "description": "Unique chosen name of the user",
      "isUniqueKey": true
    },
    "email":  {
      "title": "Email",
      "type": "string",
      "pattern": "^\\S+@\\S+$",
      "description": "Email address used for login retrieval and notification",
      "isUniqueKey": true
    },
    "password":  {
      "title": "Password",
      "type": "string",
      "pattern": "^\\S+@\\S+$",
      "description": "Password used to authenticate the account"
    }
  },
  "required": ["username","email","password"]
}
