{
  "type": "object",
  "title": "Collective",
  "properties": {

    "name": {
      "title": "Name",
      "type": "string"
    },

    "description": {
      "title": "Description",
      "type": "string"
    },

    "status": {
      "title": "string",
      "enum": ["draft", "active", "retired"]
    },

    "revision": {
      "type": "number"
    },

    "created": "",

    "profiles": {
      "title": "Collective profiles",
      "type": "array",
      "description": "Profiles of this collective.",
      "items": {
        "type": "number"
      }
    },

    "agreements": {
      "title": "Members",
      "type": "array",
      "description": "Agreements available between members of this collective.",
      "items": {
        "type": "object",
        "properties": {
          "agreementId":  {
            "type": "number"
          },
          "required":  {
            "type": "boolean"
          },
          "cardinality":  {
            "type": "number"
          }
        }
      }
    },

    "visibility": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["public", "tribe", "private"]
      }
    },

    "membership": {
      "type": "object",
      "properties": {

        "type": {
          "type": "string",
          "enum": ["open", "closed"]
        },

        "allowedTypes": {
          "type": "array",
          "description": "Allowed entity types that may join this collective.",
          "items": {
            "type": "string",
            "enum": ["collective", "user"]
          }
        },

        "members":  {
          "title": "Members",
          "type": "array",
          "description": "Members of this collective.",
          "items": {
            "type": "object",
            "properties": {

              "memberId":  {
                "type": "number"
              },

              "memberType": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["collective", "user"]
                }
              },

              "role": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["guest", "member", "retired", "moderator", "administrator"]
                }
              }
            }
          }
        }
      }
    }
  }
}
