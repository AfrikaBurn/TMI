{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://tmi-platform.org/schemas/collective.json",

  "definitions": {
    "uei": {"$ref": "http://minimi.org/schemas/fields.json#/definitions/uei"},
    "name": {"$ref": "http://tmi-platform.org/schemas/shared.json#/definitions/name"},
    "description": {"$ref": "http://tmi-platform.org/schemas/shared.json#/definitions/description"},
    "exposure": {"$ref": "http://tmi-platform.org/schemas/shared.json#/definitions/exposure"},
    "status": {"$ref": "http://tmi-platform.org/schemas/shared.json#/definitions/status"}
  },

  "type": "object",
  "title": "Collective",
  "properties": {

    "id":  {
      "allOf": [
        {"$ref": "#/definitions/uei"},
        {
          "title": "Collective ID",
          "description": "Unique collective identifier."
        }
      ],
      "isUniqueKey": true
    },

    "name":  {
      "allOf": [
        {"$ref": "#/definitions/name"},
        {
          "title": "Collective name",
          "Description": "Name of the collective."
        }
      ],
      "isUniqueKey": true
    },

    "description":  {
      "allOf": [
        {"$ref": "#/definitions/description"},
        {
          "title": "Description",
          "Description": "A short description of the collective."
        }
      ]
    },


    "profiles": {
      "title": "Collective profiles",
      "type": "array",
      "description": "Profiles this collective collects.",
      "items": {
        "type": "number"
      }
    },

    "agreements": {
      "title": "Agreements",
      "type": "array",
      "description": "Agreements available between members of this collective.",
      "items": {
        "type": "object",
        "properties": {
          "agreementId":  {
            "type": "number"
          },
          "required":  {
            "type": "boolean"
          },
          "cardinality":  {
            "type": "number"
          }
        }
      }
    },

    "status": {"$ref": "#/definitions/status"},
    "exposure": {"$ref": "#/definitions/exposure"},
    "membership": {"$ref": "#/definitions/exposure"}
  },

  "required": ["name", "description", "status"]
}