{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://tmi-platform.org/schemas/collective.json",

  "definitions": {
    "uei": {"$ref": "http://minimi.org/schemas/fields.json#/definitions/uei"},
    "exposure": {"$ref": "http://tmi-platform.org/schemas/core/shared.json#/definitions/exposure"},
    "status": {"$ref": "http://tmi-platform.org/schemas/core/shared.json#/definitions/status"},

    "membership": {
      "type": "string",
      "enum": ["public", "private"],
      "default": "private"
    }
  },

  "type": "object",
  "title": "Collective",
  "properties": {

    "id":  {
      "allOf": [
        {"$ref": "#/definitions/uei"},
        {
          "title": "Collective ID",
          "description": "Unique collective identifier"
        }
      ],
      "isUniqueKey": true
    },

    "name": {
      "title": "Name",
      "type": "string"
    },

    "description": {
      "title": "Description",
      "type": "string"
    },

    "status": {"$ref": "#/definitions/status"},

    "profiles": {
      "title": "Collective profiles",
      "type": "array",
      "description": "Profiles this collective possesses.",
      "items": {
        "type": "number"
      }
    },

    "agreements": {
      "title": "Agreements",
      "type": "array",
      "description": "Agreements available between members of this collective.",
      "items": {
        "type": "object",
        "properties": {
          "agreementId":  {
            "type": "number"
          },
          "required":  {
            "type": "boolean"
          },
          "cardinality":  {
            "type": "number"
          }
        }
      }
    },

    "exposure": {"$ref": "#/definitions/exposure"},

    "membership": {"$ref": "#/definitions/membership"}

  },

  "required": ["name", "description", "status"]
}