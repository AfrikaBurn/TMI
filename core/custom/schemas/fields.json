{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://tmi-platform.org/schemas/fields.json",

  "definitions": {

    "exposure": {
      "title": "Exposure",
      "type": "string",
      "enum": [
        "owner",
        "administrator",
        "moderator",
        "member",
        "authenticated",
        "anonymous"
      ],
      "default": "private"
    },

    "status": {
      "title": "Status",
      "type": "string",
      "enum": ["draft", "active", "retired", "banned"],
      "default": "draft"
    },

    "inclusivity": {
      "title": "Inclusivity",
      "type": "string",
      "enum": ["anyone", "request", "invitation"]
    }
  }
}