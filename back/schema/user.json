{
  "type": "object",
  "title": "User",
  "properties": {

    "id":  {
      "title": "User ID",
      "description": "Unique index of this user.",
      "type": "number",
      "isUniqueKey": true
    },

    "username":  {
      "title": "Username",
      "description": "Unique chosen name of the user",
      "type": "string",
      "isUniqueKey": true
    },

    "email":  {
      "title": "Email",
      "description": "Email address used for login retrieval and notification",
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "pattern": "^\\S+@\\S+$"
        },
        "privacy": {
          "type": "string",
          "enum": ["private", "administrators", "collectives", "everyone"]
        }
      },
      "isUniqueKey": true
    },

    "password":  {
      "title": "Password",
      "type": "string",
      "pattern": "^\\w+@\\w+\\.\\w$",
      "description": "Password used to authenticate the account"
    }
  },

  "required": ["username", "email", "password"]
}
